<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
>

        <com.jackandphantom.circularimageview.RoundedImage android:layout_width="fill_parent" android:layout_height="@dimen/_100sdp"
                                                           android:id="@+id/img_image_view_detail"
                                                           android:src="@drawable/ic_back_1_sale_detail"
                                                           android:scaleType="centerCrop"
                                                           android:adjustViewBounds="true"
                                                           app:rounded_radius="15"/>
        <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:padding="@dimen/_20sdp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:id="@+id/prg_image_detail"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@color/trans_black_80"
                android:clickable="true"/>
</RelativeLayout>