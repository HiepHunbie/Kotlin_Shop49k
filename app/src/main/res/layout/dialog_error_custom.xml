<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:background="@drawable/custom_edittext_login_dialog"
                    android:layout_margin="@dimen/_1sdp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_margin="@dimen/_15sdp"
                      android:orientation="vertical"
                      android:id="@+id/layout_title">

            <ImageView android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp"
                       android:src="@drawable/ic_error_red"
                       android:layout_gravity="center"
            />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="@string/error"
                          android:textSize="@dimen/_15sdp"
                          android:textColor="@color/text_black"
                          android:textStyle="bold"/>

                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:text="@string/error"
                          android:textSize="@dimen/_12sdp"
                          android:textColor="@color/text_hide"
                          android:layout_marginTop="@dimen/_2sdp"
                          android:id="@+id/txt_mess_error"
                          android:gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line"
              android:layout_below="@+id/layout_title"
              android:id="@+id/view_title"/>

        <TextView android:layout_width="@dimen/_120sdp" android:layout_height="wrap_content"
                  android:layout_below="@+id/view_title"
                  android:text="@string/ok"
                  android:textColor="@color/white"
                  android:background="@drawable/custom_button_login"
                  android:padding="@dimen/_10sdp"
                  android:textStyle="bold"
                  android:textSize="@dimen/_12sdp"
                  android:layout_margin="@dimen/_15sdp"
                  android:layout_centerInParent="true"
                  android:id="@+id/txt_ok"
                  android:gravity="center"/>

        <View android:layout_width="match_parent" android:layout_height="@dimen/_2sdp"
              android:background="@drawable/custom_line_item_bottom"
              android:layout_below="@+id/txt_ok"
              android:visibility="gone"/>

    </RelativeLayout></RelativeLayout>