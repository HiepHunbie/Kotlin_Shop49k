<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_main"
android:id="@+id/layout_scroll">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    >

        <ImageView android:layout_width="match_parent" android:layout_height="@dimen/_160sdp"
                   android:background="@drawable/ic_back_top_home_hide"
                   android:scaleType="fitStart"></ImageView>
        <ImageView android:layout_width="match_parent" android:layout_height="@dimen/_160sdp"
                   android:background="@drawable/ic_back_top_home_orange"
                   android:scaleType="fitStart"></ImageView>

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="@dimen/_20sdp"
            >
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:orientation="vertical"
                              android:id="@+id/layout_manage_offers">

                    <ImageView android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp"
                               android:src="@drawable/ic_offers_manage"
                               android:layout_gravity="center_horizontal"
                               android:layout_marginBottom="@dimen/_5sdp"
                    />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_horizontal"
                              android:text="@string/manage_offers"
                              android:textColor="@color/white"
                              android:textSize="@dimen/_11sdp"             />
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:orientation="vertical"
                              android:id="@+id/layout_check_qr_code">

                    <ImageView android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp"
                               android:src="@drawable/ic_qr_code"
                               android:layout_gravity="center_horizontal"
                               android:layout_marginBottom="@dimen/_5sdp"
                    />

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_gravity="center_horizontal"
                              android:text="@string/check_qr_code"
                              android:textColor="@color/white"
                              android:textSize="@dimen/_11sdp"             />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="@dimen/_20sdp"
            >
                <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_edittext_login_dialog"
                                android:padding="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_5sdp">

                    <RelativeLayout android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/custom_text_circle_yellow"
                                    android:id="@+id/layout_circle_manage_order"
                    >
                        <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_offers_yellow"
                                   android:layout_centerInParent="true"
                                   android:padding="@dimen/_5sdp"/>
                    </RelativeLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_toRightOf="@+id/layout_circle_manage_order"
                                  android:layout_marginLeft="@dimen/_10sdp"
                    >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/txt_num_order"
                                  android:text="243"
                                  android:textColor="@color/text_black"
                                  android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
                                  android:textSize="@dimen/_13sdp"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/order"
                                  android:textColor="@color/text_hide_home"
                                  android:textSize="@dimen/_9sdp"
                        />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_edittext_login_dialog"
                                android:padding="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                    <RelativeLayout android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/custom_text_circle_blue"
                                    android:id="@+id/layout_circle_manage_custommer"
                    >
                        <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_customer"
                                   android:layout_centerInParent="true"
                                   android:padding="@dimen/_5sdp"/>
                    </RelativeLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_toRightOf="@+id/layout_circle_manage_custommer"
                                  android:layout_marginLeft="@dimen/_10sdp"
                    >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/txt_num_customer"
                                  android:text="243"
                                  android:textColor="@color/text_black"
                                  android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
                                  android:textSize="@dimen/_13sdp"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/customer"
                                  android:textColor="@color/text_hide_home"
                                  android:textSize="@dimen/_9sdp"
                        />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
            >
                <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_edittext_login_dialog"
                                android:padding="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_5sdp">

                    <RelativeLayout android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/custom_text_circle_rose"
                                    android:id="@+id/layout_circle_manage_offers"
                    >
                        <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_offer"
                                   android:layout_centerInParent="true"
                                   android:padding="@dimen/_5sdp"/>
                    </RelativeLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_toRightOf="@+id/layout_circle_manage_offers"
                                  android:layout_marginLeft="@dimen/_10sdp"
                    >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/txt_num_offer"
                                  android:text="243"
                                  android:textColor="@color/text_black"
                                  android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
                                  android:textSize="@dimen/_13sdp"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/offers"
                                  android:textColor="@color/text_hide_home"
                                  android:textSize="@dimen/_9sdp"
                        />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout android:layout_width="0dp" android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/custom_edittext_login_dialog"
                                android:padding="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                    <RelativeLayout android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:background="@drawable/custom_text_circle_green"
                                    android:id="@+id/layout_circle_manage_count_view"
                    >
                        <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                                   android:src="@drawable/ic_total_view"
                                   android:layout_centerInParent="true"
                                   android:padding="@dimen/_5sdp"/>
                    </RelativeLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_toRightOf="@+id/layout_circle_manage_count_view"
                                  android:layout_marginLeft="@dimen/_10sdp"
                    >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:id="@+id/txt_num_count_view"
                                  android:text="243"
                                  android:textColor="@color/text_black"
                                  android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
                                  android:textSize="@dimen/_13sdp"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/count_view"
                                  android:textColor="@color/text_hide_home"
                                  android:textSize="@dimen/_9sdp"
                        />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/custom_edittext_login_dialog">

                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal"
                                android:id="@+id/layout_top_chart">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="@string/sales_statistics"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/text_black"
                    />

                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl"
                    >
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="+20%"
                        android:textColor="@color/text_green_home"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"/>

                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                  android:text="@string/this_month_"
                                  android:textColor="@color/text_red_home"
                                  android:textSize="@dimen/_11sdp"
                                  android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
                        android:layout_marginRight="@dimen/_3sdp"/>
                    </LinearLayout>

                </RelativeLayout>
                <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_home"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_below="@+id/layout_top_chart"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>

                <RelativeLayout android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/chart_home"
                android:background="@drawable/custom_edittext_login_disable"
                android:padding="@dimen/_5sdp">
                    <ImageView android:layout_width="@dimen/_10sdp" android:layout_height="@dimen/_10sdp"
                    android:id="@+id/img_reload_chart"
                    android:src="@drawable/ic_repeat"
                    android:padding="@dimen/_1sdp"
                    android:layout_centerVertical="true"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_reload_chart"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_centerVertical="true"
                    android:text="@string/repeat_5_minute_ago"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/text_hide_home"/>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/custom_edittext_login_dialog"
            android:orientation="vertical">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="@string/recent_orders"
                              android:textSize="@dimen/_11sdp"
                              android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
                              android:textColor="@color/text_black"
                              android:layout_margin="@dimen/_10sdp"
                              android:id="@+id/txt_recent_orders"
                    />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="@string/view_all"
                              android:textSize="@dimen/_11sdp"
                              android:textColor="@color/text_forgot_pass"                           android:fontFamily="@font/montserrat_medium"
                              android:layout_margin="@dimen/_10sdp"
                              android:id="@+id/txt_view_all_recent_orders"
                              android:layout_alignParentRight="true"
                    />
                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">
                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/ryv_recent_orders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical"
                              android:id="@+id/layout_view_all"
                android:visibility="gone">
                    <View android:layout_width="match_parent" android:layout_height="1dp"
                          android:background="@color/line_otp_disable"/>

                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:padding="@dimen/_10sdp"
                              android:text="@string/view_all"
                              android:id="@+id/txt_view_all"
                              android:textColor="@color/text_forgot_pass"                           android:fontFamily="@font/montserrat_medium"
                              android:textSize="@dimen/_11sdp"
                              android:gravity="center"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>



</ScrollView>