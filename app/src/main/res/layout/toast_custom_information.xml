<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/toast_layout_root"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_35sdp"
              android:background="@drawable/custom_storage_units_icon_green"
android:padding="@dimen/_5sdp">

    <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_checked_white"
    android:id="@+id/imgToast"
    android:padding="@dimen/_5sdp"/>

    <TextView
            android:id="@+id/customToastText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="Fully custom toast."
            android:textSize="@dimen/_12sdp"
    android:gravity="center_vertical"
    android:textColor="@color/white"
    android:layout_toRightOf="@+id/imgToast"
    android:layout_toLeftOf="@+id/customToastDelete"/>

    <ImageView
            android:id="@+id/customToastDelete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_delete_white"
    android:padding="@dimen/_2sdp"
            android:layout_alignParentRight="true"
    />
</RelativeLayout>