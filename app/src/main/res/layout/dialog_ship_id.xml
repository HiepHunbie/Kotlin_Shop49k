<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/custom_background_ship_id"
              android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_50sdp"
    >
        <ImageView android:layout_width="@dimen/_30sdp" android:layout_height="match_parent"
                   android:id="@+id/img_back_ship_id"
                   android:paddingLeft="@dimen/_10sdp"
        app:srcCompat = "@drawable/ic_arrow"
        android:tint="@color/white"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:textColor="@color/white"
                  android:text="@string/ship_id"
                  android:textSize="@dimen/_14sdp"
                  android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
                  android:id="@+id/title_tab_ship_id"/>
    </RelativeLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:textColor="@color/white"
              android:text="@string/ship_id_info"
              android:textSize="@dimen/_11sdp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/_15sdp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_edittext_login_dialog"
    android:padding="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp">
        
        <ImageView android:layout_width="@dimen/_100sdp" android:layout_height="@dimen/_100sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_back_1_sale_detail"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/_10sdp"/>

        <View android:layout_width="match_parent" android:layout_height="1dp"
        android:background="@color/view_line"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="@dimen/_11sdp"
                      android:textColor="@color/text_black"
                      android:text="@string/total_money_buying"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="@dimen/_11sdp"
                      android:textColor="@color/button_login"
                      android:layout_marginLeft="@dimen/_3sdp"
                      android:id="@+id/txt_total_money_buying"
                      android:text="10000d"
                      android:layout_alignParentRight="true"
                      android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>