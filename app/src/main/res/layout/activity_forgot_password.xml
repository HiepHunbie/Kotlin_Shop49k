<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include android:id="@+id/layout_forgot_password"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             layout="@layout/layout_forgot_password"/>

    <include android:id="@+id/layout_get_otp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             layout="@layout/layout_get_otp"
             android:visibility="gone"/>
    <include android:id="@+id/layout_confirm_otp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             layout="@layout/layout_confirm_otp"
             android:visibility="gone"/>
    <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_130sdp"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:id="@+id/prg_forgot_password"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="@color/trans_black_80"
            android:clickable="true"/>
</RelativeLayout>