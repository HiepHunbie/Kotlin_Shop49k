<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_60sdp" xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginRight="@dimen/_5sdp">

    <com.jackandphantom.circularimageview.RoundedImage android:orientation="vertical"
                                            android:layout_width="@dimen/_80sdp"
                                            android:layout_height="@dimen/_60sdp"
                                            android:id="@+id/img_image"
                                            android:scaleType="centerInside"
                                                       app:rounded_radius="15"
    />

    <ImageView android:layout_width="@dimen/_25sdp" android:layout_height="@dimen/_25sdp"
    app:srcCompat = "@drawable/ic_delete_edit_image"
    android:layout_alignParentRight="true"
               android:padding="@dimen/_5sdp"
               android:alpha="0.8"
               android:id="@+id/img_delete_item"
    />

    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/_20sdp"
    android:layout_alignParentBottom="true"
    android:background="@color/trans_black_80"
    android:id="@+id/layout_type_image"
    android:visibility="gone">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/cover_image"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>