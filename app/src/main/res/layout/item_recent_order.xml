<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
android:padding="@dimen/_5sdp">

        <ImageView android:layout_width="@dimen/_50sdp" android:layout_height="@dimen/_30sdp"
                   android:src="@drawable/ic_back_item_2"
        android:id="@+id/img_left"
                   android:scaleType="centerCrop"/>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/layout_button">
            <ImageView android:layout_width="@dimen/_22sdp" android:layout_height="@dimen/_22sdp"
            android:id="@+id/img_delete_item"
            android:src="@drawable/ic_delete_item"
            android:layout_marginRight="@dimen/_3sdp"/>
            <ImageView android:layout_width="@dimen/_22sdp" android:layout_height="@dimen/_22sdp"
                       android:id="@+id/img_success_item"
                       android:src="@drawable/ic_success_item"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_left"
        android:layout_toLeftOf="@+id/layout_button"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="(42)"
                android:id="@+id/txt_number_order"
                android:textColor="@color/text_hide_home"
                android:textSize="@dimen/_10sdp"/>
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:id="@+id/txt_name_order"
                          android:textColor="@color/text_black"
                          android:textSize="@dimen/_10sdp"
                android:gravity="left"
                android:singleLine="true"
                android:layout_marginRight="@dimen/_5sdp"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="#4322424"
                      android:id="@+id/txt_id_order"
                      android:textColor="@color/text_hide_home"
                      android:textSize="@dimen/_10sdp"/>
        </LinearLayout>

</RelativeLayout>