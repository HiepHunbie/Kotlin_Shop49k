<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container_frame"
            android:orientation="horizontal"
    android:background="@color/text_hide_home"
    android:layout_above="@+id/view_line_main">

    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
    android:background="@color/line_otp_disable"
    android:id="@+id/view_line_main"
          android:layout_above="@+id/layout_bottom"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="@dimen/_50sdp"
                  android:background="@android:color/transparent"
                  android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:id="@+id/layout_bottom"
    >

        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/button_home"
        android:background="@color/white">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:weightSum="2"
                          android:orientation="vertical" 
            >
                <ImageView android:layout_width="match_parent" android:layout_height="0dp"
                           android:layout_weight="1"
                           android:id="@+id/img_button_home"
                android:paddingTop="@dimen/_10sdp"
                           app:srcCompat="@drawable/ic_home"/>

                <TextView android:layout_width="match_parent" android:layout_height="0dp"
                          android:layout_weight="1"
                          android:text="@string/home"
                          android:textColor="@color/text_hide_home"
                          android:gravity="center_horizontal"
                          android:textSize="@dimen/_8sdp"
                          android:paddingTop="@dimen/_2sdp"
                          android:id="@+id/txt_button_home"/>
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/button_offer"
        >
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:weightSum="2"
                          android:orientation="vertical"
                          android:background="@color/white"
            >
                <ImageView android:layout_width="match_parent" android:layout_height="0dp"
                           android:layout_weight="1"
                           app:srcCompat="@drawable/ic_pricetag"
                           android:paddingTop="@dimen/_10sdp"
                           android:id="@+id/img_button_offer"/>

                <TextView android:layout_width="match_parent" android:layout_height="0dp"
                          android:layout_weight="1"
                          android:text="@string/offer"
                          android:textColor="@color/text_hide_home"
                          android:gravity="center_horizontal"
                          android:textSize="@dimen/_8sdp"
                          android:paddingTop="@dimen/_2sdp"
                          android:id="@+id/txt_button_offer"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/button_create_new">
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/white"
                >
                <RelativeLayout android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:background="@drawable/custom_text_circle"
                                android:layout_centerInParent="true"
                >

                </RelativeLayout>
                    <ImageView android:layout_width="@dimen/_20sdp" android:layout_height="@dimen/_20sdp"
                               android:src="@drawable/ic_create_new"
                               android:id="@+id/img_button_create_new"
                    android:layout_centerInParent="true"/>
                </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/button_sale">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:weightSum="2"
                          android:orientation="vertical"
                          android:background="@color/white"
            >
                <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
                                android:layout_weight="1"
                                >
                    <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                               app:srcCompat="@drawable/ic_gift"
                               android:paddingTop="@dimen/_10sdp"
                               android:id="@+id/img_button_sale"/>
                    <TextView android:layout_width="@dimen/_16sdp" android:layout_height="@dimen/_16sdp"
                              android:id="@+id/txt_num_button_sale"
                              android:background="@drawable/custom_text_circle"
                              android:text="20"
                              android:textSize="@dimen/_10sdp"
                              android:gravity="center"
                              android:textColor="@color/white"
                              android:layout_alignParentRight="true"
                              android:layout_marginRight="@dimen/_16sdp"
                              android:layout_marginTop="@dimen/_4sdp"
                              android:visibility="gone"/>
                </RelativeLayout>


                <TextView android:layout_width="match_parent" android:layout_height="0dp"
                          android:layout_weight="1"
                          android:text="@string/sale"
                          android:textColor="@color/text_hide_home"
                          android:gravity="center_horizontal"
                          android:textSize="@dimen/_8sdp"
                          android:paddingTop="@dimen/_2sdp"
                          android:id="@+id/txt_button_sale"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/button_account"
                        android:background="@color/white">
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                          android:orientation="vertical"
            >
                <ImageView android:layout_width="match_parent" android:layout_height="0dp"
                           android:layout_weight="1"
                           app:srcCompat="@drawable/ic_user"
                           android:paddingTop="@dimen/_10sdp"
                           android:id="@+id/img_button_account"/>

                <TextView android:layout_width="match_parent" android:layout_height="0dp"
                          android:layout_weight="1"
                          android:text="@string/account"
                          android:textColor="@color/text_hide_home"
                          android:gravity="center_horizontal"
                          android:textSize="@dimen/_8sdp"
                          android:paddingTop="@dimen/_2sdp"
                          android:id="@+id/txt_button_account"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>