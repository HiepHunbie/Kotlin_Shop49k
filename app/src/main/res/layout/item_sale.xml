<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
android:orientation="horizontal"
              android:id="@+id/layout_item"
>

    <ImageView android:layout_width="@dimen/_5sdp" android:layout_height="@dimen/_5sdp"
    android:background="@drawable/custom_text_circle"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/_10sdp"
    android:id="@+id/img_view_status"/>

    <RelativeLayout android:layout_width="@dimen/_30sdp" android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_6sdp"
    android:background="@drawable/ic_calendar">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/addresssss"
                  android:layout_centerInParent="true"
                  android:textSize="@dimen/_9sdp"
                  android:textColor="@color/white"
                  android:id="@+id/txt_order_date_first"
                  android:fontFamily="@font/montserrat_bold"
                  android:gravity="center"
        />
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_6sdp"
    android:layout_gravity="center_vertical">

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/txt_title_sale"
        android:text="AAAAAA"
        android:textColor="@color/text_black"
        android:textStyle="bold"                       android:fontFamily="@font/montserrat_bold"
        android:textSize="@dimen/_10sdp"
        android:gravity="bottom"
        android:paddingRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/txt_time_ago_sale"
                  android:text="AAAAAA"
                  android:textColor="@color/text_hide_home"
                  android:textSize="@dimen/_9sdp"
                  android:gravity="bottom"
                  android:paddingRight="@dimen/_10sdp"/>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/view_line"
              android:layout_marginTop="@dimen/_10sdp"/>
    </LinearLayout>
</LinearLayout>